@model ApiFutbol.Models.Posicion

@{
    Layout = "_LAYOUT";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h1 class="text-light">Agregar Posición</h1>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePosicion" class="control-label"></label>
                <input asp-for="NombrePosicion" class="form-control" placeholder="Escriba el nombre de la posición" />
                <span asp-validation-for="NombrePosicion" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                    <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
