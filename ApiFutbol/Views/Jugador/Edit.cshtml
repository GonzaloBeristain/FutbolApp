@model ApiFutbol.Models.Jugador

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4 class="text-light">Jugador</h4>
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdJugador" />
            <div class="form-group">
                <label asp-for="NombreJugador" class="control-label">Nombre</label>
                <input asp-for="NombreJugador" class="form-control" />
                <span asp-validation-for="NombreJugador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisJugador" class="control-label">País</label>
                <input asp-for="PaisJugador" class="form-control" />
                <span asp-validation-for="PaisJugador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPosicion" class="control-label">Posición</label>
                <select asp-for="IdPosicion" class="form-control" asp-items="ViewBag.IdPosicion"></select>
                <span asp-validation-for="IdPosicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEquipo" class="control-label">Equipo</label>
                <select asp-for="IdEquipo" class="form-control" asp-items="ViewBag.IdEquipo"></select>
                <span asp-validation-for="IdEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
            
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
