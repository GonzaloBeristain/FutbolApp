@model ApiFutbol.Models.Liga

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h3 class="text-light">Estás seguro de que quieres eliminar esta liga?</h3>
<div>
    <hr />
    <div>
            <dl class="row text-light">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreLiga)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreLiga)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaisLiga)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaisLiga)
                </dd>
            </dl>
    </div>
    <div class="d-flex flex-column">
        <form asp-action="Delete" class="pb-2">
            <input type="hidden" asp-for="IdLiga" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            
        </form>
            <a asp-action="Index">Volver a la Lista</a>
    </div>
    
 
</div>
</body>
</html>
