@model ApiFutbol.Models.Liga

@{
    Layout = "_LAYOUT";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h1 class="text-light">Agregar Liga</h1>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreLiga" class="control-label"></label>
                <input asp-for="NombreLiga" class="form-control" placeholder="Escriba el nombre de la liga" />
                <span asp-validation-for="NombreLiga" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="PaisLiga" class="control-label"></label>
                <input asp-for="PaisLiga" class="form-control" placeholder="Escriba el país de la liga" />
                <span asp-validation-for="PaisLiga" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
