@model ApiFutbol.Models.Liga

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h1 class="text-light">Liga</h1>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLiga" />
            <div class="form-group">
                <label asp-for="NombreLiga" class="control-label">Nombre</label>
                <input asp-for="NombreLiga" class="form-control" />
                <span asp-validation-for="NombreLiga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisLiga" class="control-label">País</label>
                <input asp-for="PaisLiga" class="form-control" />
                <span asp-validation-for="PaisLiga" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
